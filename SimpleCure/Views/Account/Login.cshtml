@using SimpleCure.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = "";
}
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Simple Cure Login</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="robots" content="all,follow">
    <link href="~/distribution/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/distribution/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/distribution/css/fontastic.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700">
    <link href="~/distribution/css/grasp_mobile_progress_circle-1.0.0.min.css" rel="stylesheet" />
    <link href="~/distribution/vendor/malihu-custom-scrollbar-plugin/jquery.mCustomScrollbar.css" rel="stylesheet" />
    <link href="~/distribution/css/style.default.css" rel="stylesheet" />
    <link id="new-stylesheet" rel="stylesheet">
    <link href="~/distribution/css/custom.css" rel="stylesheet" />
    <!-- Tweaks for older IEs-->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script><![endif]-->
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 p-0">
                <div class="min-vh-100 text-center m-0 d-flex flex-column justify-content-center">
                    <div class="page login-page">
                        <div class="container">
                            <div class="form-outer text-center align-items-center">
                                <div class="form-inner">
                                    <div class="logo text-uppercase"><span>Simple</span><strong class="text-primary">Cure</strong></div>
                                    <p> </p>
                                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "text-left form-validate", role = "form" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <div class="form-group-material">
                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group-material">
                                            @Html.TextBoxFor(m => m.Email, new { id = "login-username", @class = "input-material" })
                                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                            <label for="login-username" class="label-material">Username/Email</label>
                                        </div>
                                        <div class="form-group-material">
                                            @Html.PasswordFor(m => m.Password, new { @class = "input-material" })
                                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                            <label for="Password" class="label-material">Password</label>
                                        </div>
                                        <div class="form-group text-center">
                                            <input type="submit" value="Log in" class="btn btn-primary" />
                                        </div>
                                    }
                                    @Html.ActionLink("Forgot Password?", "ForgotPassword", null, new { @class = "forgot-pass" })
                                    <small>Do not have an account? </small>
                                    @Html.ActionLink("Signup", "Register", null, new { @class = "signup" })

                                </div>
                                <div class="copyrights text-center">
                                    <p>Simple Cure &copy; 2019</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>    
    <script src="~/distribution/vendor/jquery/jquery.min.js"></script>
    <script src="~/distribution/vendor/popper.js/umd/popper.min.js"></script>
    <script src="~/distribution/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/distribution/js/grasp_mobile_progress_circle-1.0.0.min.js"></script>
    <script src="~/distribution/vendor/jquery.cookie/jquery.cookie.js"></script>
    <script src="~/distribution/vendor/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/distribution/vendor/malihu-custom-scrollbar-plugin/jquery.mCustomScrollbar.concat.min.js"></script>
    <script src="~/distribution/js/front.js"></script>
</body>
</html>