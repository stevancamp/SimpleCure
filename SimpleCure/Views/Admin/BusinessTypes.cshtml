@model SimpleCure.Models.AdminModels.BusinessTypes_ViewModel
@{
    ViewBag.Title = "Business Types";
}
<input type="hidden" value="@Url.Action("CreateBusinessType", "Admin")" id="UrlCreateBusinessType" />
<input type="hidden" value="@Url.Action("EditBusinessType", "Admin")" id="UrlEditBusinessType" />
<input type="hidden" value="@Url.Action("BusinessTypes", "Admin")" id="UrlBusinessTypes" />

@if (Model.ResponseSuccess == false && Model.responseTypes == SimpleCure.Models.ResponseTypes.Failure)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>There was an error!</strong> @Model.ResponseMessage
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@if (Model.responseTypes == SimpleCure.Models.ResponseTypes.Information)
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
         @Model.ResponseMessage
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@if (Model.responseTypes == SimpleCure.Models.ResponseTypes.Success && !string.IsNullOrEmpty(Model.ResponseMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
         @Model.ResponseMessage
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<input type="hidden" id="ToggleActiveStatus" value="@Model.ActiveStatus.ToString()" />

<div class="breadcrumb-holder">
    <div class="container-fluid">
        <ul class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink(" Home", "Index", "Home")
            </li>
            <li class="breadcrumb-item active">Industry Types</li>
        </ul>
    </div>
</div>
<section class="forms">
    <div class="container-fluid">
        <header>
            <h1 class="h3 display">Industry Types</h1>
        </header>
        <div class="row">
            <div class="col-md-8">

                <div class="card">
                    <div class="card-header">
                        <h4>Industry Types Table <a href="#" data-toggle="tooltip" data-placement="top" title="Toggle Active" onclick="ToggleActive();" class="btn btn-sm btn-outline-primary">Toggle Active</a> <a href="#" class="pull-right btn btn-sm btn-outline-primary" data-toggle="tooltip" data-placement="top" title="Create New Business Type" onclick="ShowCreate();">Create</a></h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Type</th>
                                        <th>IsActive</th>
                                        <th>Edit</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.ListBusinessTypes != null && Model.ListBusinessTypes.Count > 0)
                                    {
                                        foreach (var item in Model.ListBusinessTypes)
                                        {
                                            <tr>
                                                <td>@item.Type</td>
                                                <td>@item.IsActive</td>
                                                <td><a href="#" onclick="ShowEdit(@item.ID)" class="btn btn-sm btn-outline-primary">Edit</a></td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="3" class="text-center">There are no Industry Types</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div id="BusinessTypeWorkDiv"></div>
            </div>
        </div>
    </div>
</section>

@section scripts {
    <script src="~/Scripts/ViewScripts/BusinessTypesViewScirpt.js"></script>
}
