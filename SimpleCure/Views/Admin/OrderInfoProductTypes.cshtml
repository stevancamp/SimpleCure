@model SimpleCure.Models.AdminModels.OrderInfoProductType_ViewModel
@{
    ViewBag.Title = "Order Info Product Types";
}
<input type="hidden" value="@Url.Action("CreateOrderInfoProductType", "Admin")" id="UrlCreateOrderInfoProductType" />
<input type="hidden" value="@Url.Action("EditOrderInfoProductType", "Admin")" id="UrlEditOrderInfoProductType" />
<input type="hidden" value="@Url.Action("OrderInfoProductTypes", "Admin")" id="UrlOrderInfoProductTypes" />

@if (Model.ResponseSuccess == false && Model.responseTypes == SimpleCure.Models.ResponseTypes.Failure)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>There was an error!</strong> @Model.ResponseMessage
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@if (Model.responseTypes == SimpleCure.Models.ResponseTypes.Information)
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        @Model.ResponseMessage
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@if (Model.responseTypes == SimpleCure.Models.ResponseTypes.Success && !string.IsNullOrEmpty(Model.ResponseMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @Model.ResponseMessage
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<input type="hidden" id="ToggleActiveStatus" value="@Model.ActiveStatus.ToString()" />

<div class="breadcrumb-holder">
    <div class="container-fluid">
        <ul class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink(" Home", "Index", "Home")
            </li>
            <li class="breadcrumb-item active">Order Info Product Types</li>
        </ul>
    </div>
</div>
<section class="forms">
    <div class="container-fluid">
        <header>
            <h1 class="h3 display">Order Info Product Types</h1>
        </header>
        <div class="row">
            <div class="col-md-8">

                <div class="card">
                    <div class="card-header">
                        <h4>Order Info Product Types Table <a href="#" data-toggle="tooltip" data-placement="top" title="Toggle Active" onclick="ToggleActive();"><i class="fa fa-arrows-h"></i></a> <a href="#" class="pull-right" data-toggle="tooltip" data-placement="top" title="Create New Order Info Product Type" onclick="ShowCreate();"><i class="fa fa-plus-circle"></i></a></h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Type</th>
                                        <th>IsActive</th>
                                        <th>Price</th>
                                        <th>Group Name</th>
                                        <th>Edit</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.ListOrderInfoProductTypes != null && Model.ListOrderInfoProductTypes.Count > 0)
                                    {
                                        foreach (var item in Model.ListOrderInfoProductTypes)
                                        {
                                            <tr>
                                                <td>@item.Type</td>
                                                <td>@item.IsActive</td>
                                                <td>@string.Format("{0:C}", item.Price)</td>
                                                <td>@item.GroupName</td>
                                                <td><a href="#" onclick="ShowEdit(@item.ID)"><i class="fa fa-edit"></i></a></td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="3" class="text-center">There are no Order Info Product Types</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div id="OrderInfoProductTypeWorkDiv"></div>
            </div>
        </div>
    </div>
</section>

@section scripts {
    <script src="~/Scripts/ViewScripts/OrderInfoProductTypesViewScirpt.js"></script>
}
