@model SimpleCure.Models.OrderStatusModels.OrderStatus_ViewModel
@{
    ViewBag.Title = "Order Status";
}

<input type="hidden" value="@Url.Action("CreateOrderStatus", "Admin")" id="UrlCreateOrderStatus" />
<input type="hidden" value="@Url.Action("EditOrderStatus", "Admin")" id="UrlEditOrderStatus" />
<input type="hidden" value="@Url.Action("OrderStatus", "Admin")" id="UrlOrderStatus" />

@if (Model.ResponseSuccess == false && Model.responseTypes == SimpleCure.Models.ResponseTypes.Failure)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>There was an error!</strong> @Model.ResponseMessage
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@if (Model.responseTypes == SimpleCure.Models.ResponseTypes.Information)
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        @Model.ResponseMessage
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@if (Model.responseTypes == SimpleCure.Models.ResponseTypes.Success && !string.IsNullOrEmpty(Model.ResponseMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @Model.ResponseMessage
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="breadcrumb-holder">
    <div class="container-fluid">
        <ul class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink(" Home", "Index", "Home")
            </li>
            <li class="breadcrumb-item active">Order Status</li>
        </ul>
    </div>
</div>
<section class="forms">
    <div class="container-fluid">
        <header>
            <h1 class="h3 display">Order Status</h1>
        </header>
        <div class="row">
            <div class="col-md-8">

                <div class="card">
                    <div class="card-header">
                        <h4>Order Status Table  <a href="#" class="pull-right btn btn-sm btn-outline-primary" data-toggle="tooltip" data-placement="top" title="Create New Order Status" onclick="ShowCreate();">Create</a></h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Status</th>                                      
                                        <th>Edit</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.OrderStatus != null && Model.OrderStatus.Count > 0)
                                    {
                                        foreach (var item in Model.OrderStatus)
                                        {
                                            <tr>
                                                <td>@item.Status</td>                                           
                                                <td><a href="#" onclick="ShowEdit(@item.ID)" class="btn btn-sm btn-outline-primary">Edit</a></td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="3" class="text-center">There are no Order Status</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div id="OrderStatusWorkDiv"></div>
            </div>
        </div>
    </div>
</section>

@section scripts {
    <script src="~/Scripts/ViewScripts/OrderStatusViewScript.js"></script>
}
