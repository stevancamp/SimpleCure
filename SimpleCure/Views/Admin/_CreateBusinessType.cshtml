@model SimpleCure.Models.AdminModels.CreateBusinessType_ViewModel
@using (Html.BeginForm("SaveBusinessType", "Admin"))
{
    <div class="card">
        <div class="card-header d-flex align-items-center">
            <h4>Create a new Business type</h4>
        </div>
        <div class="card-body">
            <div class="form-group">
                @Html.LabelFor(m => m.CreateType, new { @class = "form-control-label" })
                @Html.TextBoxFor(m => m.CreateType, new { @class = "form-control", required = "required" })
            </div>
            <div class="form-group">              
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </div>
    </div>
}