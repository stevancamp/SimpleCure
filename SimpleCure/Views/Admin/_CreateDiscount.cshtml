@model SimpleCure.Models.DiscountModels.CreateDiscount_ViewModel
@using (Html.BeginForm("SaveNewDiscount", "Admin"))
{
    <div class="card">
        <div class="card-header d-flex align-items-center">
            <h4>Create a new Discount</h4>
        </div>
        <div class="card-body">
            <div class="form-group">
                @Html.LabelFor(m => m.DiscountAmount, new { @class = "form-control-label" })
                @Html.TextBoxFor(m => m.DiscountAmount, new { @class = "form-control", required = "required" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Type, new { @class = "form-control-label" })
                @Html.TextBoxFor(m => m.Type, new { @class = "form-control", required = "required" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.IsActive, new { @class = "form-control-label" })
                @Html.CheckBoxFor(m => m.IsActive)
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </div>
    </div>
}
