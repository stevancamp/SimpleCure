@model SimpleCure.Models.AdminModels.CreateOrderActivityType_ViewModel
    @using (Html.BeginForm("SaveOrderActivityType", "Admin"))
    {
        <div class="card">
            <div class="card-header d-flex align-items-center">
                <h4>Create a new Order Activity type</h4>
            </div>
            <div class="card-body">
                <div class="form-group">
                    @Html.LabelFor(m => m.OrderActivityType, new { @class = "form-control-label" })
                    @Html.TextBoxFor(m => m.OrderActivityType, new { @class = "form-control", required = "required" })
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </div>
        </div>
    }