@model SimpleCure.Models.OrderStatusModels.CreateOrderStatus_ViewModel
@using (Html.BeginForm("SaveOrderStatus", "Admin"))
{
    <div class="card">
        <div class="card-header d-flex align-items-center">
            <h4>Create a new Order Status</h4>
        </div>
        <div class="card-body">
            <div class="form-group">
                @Html.LabelFor(m => m.Status, new { @class = "form-control-label" })
                @Html.TextBoxFor(m => m.Status, new { @class = "form-control", required = "required" })
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </div>
    </div>
}
