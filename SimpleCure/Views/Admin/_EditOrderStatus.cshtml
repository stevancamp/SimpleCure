@model SimpleCure.Models.OrderStatusModels.EditOrderStatus_ViewModel
@using (Html.BeginForm("SaveOrderStatusEdit", "Admin"))
{
    <div class="card">
        <div class="card-header d-flex align-items-center">
            <h4>Edit a Business type</h4>
        </div>
        <div class="card-body">
            @Html.HiddenFor(m => m.ID)
            <div class="form-group">
                @Html.LabelFor(m => m.Status, new { @class = "form-control-label" })
                @Html.TextBoxFor(m => m.Status, new { @class = "form-control", required = "required" })
            </div>         
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Save Change</button>
                <a href="#DeleteModal" role="button" class="btn btn-danger" data-toggle="modal">Delete</a>
            </div>
        </div>
    </div>
}

<div class="modal fade" id="DeleteModal" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="myModalLabel">
                    Delete Business Type
                </h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure that you want to delete this Order Status @Model.Status from the database forever?
            </div>
            <div class="modal-footer">
                @using (Html.BeginForm("DeleteOrderStatus", "Admin"))
                {
                    @Html.HiddenFor(m => m.ID)
                    <button type="submit" class="btn btn-danger">Delete</button>
                }
                <button type="button" class="btn btn-secondary" data-dismiss="modal">
                    Close
                </button>
            </div>
        </div>
    </div>
</div>



