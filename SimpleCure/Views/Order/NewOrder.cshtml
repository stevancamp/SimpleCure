@model SimpleCure.Models.OrderModels.NewOrder_ViewModel

@if (Model.ResponseSuccess == false && Model.responseTypes == SimpleCure.Models.ResponseTypes.Failure)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>There was an error!</strong> @Model.ResponseMessage
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@if (Model.responseTypes == SimpleCure.Models.ResponseTypes.Information)
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        @Model.ResponseMessage
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@if (Model.responseTypes == SimpleCure.Models.ResponseTypes.Success && !string.IsNullOrEmpty(Model.ResponseMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @Model.ResponseMessage
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="breadcrumb-holder">
    <div class="container-fluid">
        <ul class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink(" Home", "Index", "Home")
            </li>
            <li class="breadcrumb-item active">Create Order</li>
        </ul>
    </div>
</div>
@using (Html.BeginForm("SubmitOrder", "Order"))
{
    <section class="forms">
        <div class="container-fluid">
            <header>
                <h1 class="h3 display">Inquiry/Order</h1>
            </header>
            <div class="row">
                <div class="col-md-12">

                    <div class="card">
                        <div class="card-header">
                            <h4>Place Simple Cure Order</h4>
                        </div>
                        <div class="card-body">
                            <div class="container-fluid">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <div class="form-group">
                                                            @Html.LabelFor(m => m.OrderModel.CompanyName, new { @class = "form-control-label" })
                                                            @Html.TextBoxFor(m => m.OrderModel.CompanyName, new { @class = "form-control", required = "required" })
                                                        </div>
                                                        <div class="form-group">
                                                            @Html.LabelFor(m => m.OrderModel.ContactName, new { @class = "form-control-label" })
                                                            @Html.TextBoxFor(m => m.OrderModel.ContactName, new { @class = "form-control", required = "required" })
                                                        </div>
                                                        <div class="form-group">
                                                            @Html.LabelFor(m => m.OrderModel.OMMANumber, new { @class = "form-control-label" })
                                                            @Html.TextBoxFor(m => m.OrderModel.OMMANumber, new { @class = "form-control", required = "required" })
                                                        </div>
                                                        <div class="form-group">
                                                            @Html.LabelFor(m => m.OrderModel.EINNumber, new { @class = "form-control-label" })
                                                            @Html.TextBoxFor(m => m.OrderModel.EINNumber, new { @class = "form-control", required = "required" })
                                                        </div>
                                                        <div class="form-group">
                                                            @Html.LabelFor(m => m.OrderModel.OBNDDNumber, new { @class = "form-control-label" })
                                                            @Html.TextBoxFor(m => m.OrderModel.OBNDDNumber, new { @class = "form-control", required = "required" })
                                                        </div>
                                                        <div class="form-group">
                                                            @Html.LabelFor(m => m.OrderModel.PhoneNumber, new { @class = "form-control-label" })
                                                            @Html.TextBoxFor(m => m.OrderModel.PhoneNumber, new { @class = "form-control", required = "required" })
                                                        </div>
                                                        <div class="form-group">
                                                            @Html.LabelFor(m => m.OrderModel.EmailAddress, new { @class = "form-control-label" })
                                                            @Html.TextBoxFor(m => m.OrderModel.EmailAddress, new { @class = "form-control", required = "required" })
                                                        </div>
                                                        <div class="form-group">
                                                            @Html.LabelFor(m => m.OrderModel.StreetAddress, new { @class = "form-control-label" })
                                                            @Html.TextBoxFor(m => m.OrderModel.StreetAddress, new { @class = "form-control", required = "required" })
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        @if (Model.OrderInfoProductTypesModel != null && Model.OrderInfoProductTypesModel.Count() > 0)
                                                        {
                                                            <p class="text-lg-center">CURRENT PRODUCT OFFERINGS</p>
                                                            <ul class="list-unstyled">
                                                                @foreach (var Name in Model.OrderInfoProductTypesModel.GroupBy(s => s.GroupName))
                                                                {
                                                                    <li>
                                                                        @Name.Key
                                                                        <hr />
                                                                    </li>
                                                                    <li>
                                                                        <ul class="check-lists list-unstyled">
                                                                            @foreach (var item in Name)
                                                                            {
                                                                                <li class="d-flex align-items-center">
                                                                                    <div class="container-fluid">
                                                                                        <div class="row">
                                                                                            <div class="col-md-12">
                                                                                                <div class="row">
                                                                                                    <div class="col-md-6">
                                                                                                        <p>@item.Type</p>
                                                                                                        <p>@item.Type_SubHeader</p>
                                                                                                    </div>
                                                                                                    <hr>
                                                                                                    <div class="col-md-6">
                                                                                                        <div class="form-group">
                                                                                                            @item.Type Quantity Requested
                                                                                                            <input type="number" id="Quantity_@item.Type" class="form-control" />
                                                                                                        </div>
                                                                                                    </div>
                                                                                                </div>
                                                                                            </div>
                                                                                            <hr />
                                                                                        </div>
                                                                                    </div>
                                                                                </li>
                                                                            }
                                                                        </ul>
                                                                    </li>
                                                                }
                                                            </ul>
                                                        }
                                                        else
                                                        {
                                                            <p>No Products available at this time.</p>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    @Html.LabelFor(m => m.OrderModel.Notes, new { @class = "form-control-label" })
                                                    @Html.TextAreaFor(m => m.OrderModel.Notes, new { @class = "form-control" })
                                                </div>
                                                <p>
                                                    Select your Business Type(s)
                                                </p>
                                                @if (Model.ListBusinessTypes != null && Model.ListBusinessTypes.Count() > 0)
                                                {
                                                    <div class="form-group">
                                                        <ul class="check-lists list-unstyled">
                                                            @foreach (var item in Model.ListBusinessTypes)
                                                            {
                                                                <li class="d-flex align-items-center">
                                                                    <input type="checkbox" id="@item.Type" name="@item.Type" class="form-control-custom">
                                                                    <label for="@item.Type">@item.Type</label>
                                                                </li>
                                                            }
                                                        </ul>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <p>There are no Business Types available!</p>
                                                }
                                                <div class="form-group">
                                                    <input type="submit" value="Submit Order" class="btn btn-primary btn-outline-primary btn-block" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
@section scripts {
    <script src="~/Scripts/ViewScripts/OrderInfoProductTypesViewScirpt.js"></script>
}
