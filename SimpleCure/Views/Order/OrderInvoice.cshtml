@model SimpleCure.Models.OrderModels.OrderInvoice_ViewModel
@{
    ViewBag.Title = "Order Invoice";
    Layout = null;
}

<html class="h-100">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Simple Cure Order Invoice</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="robots" content="all,follow">
    <link href="~/distribution/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/distribution/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/distribution/css/fontastic.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700">
    <link href="~/distribution/css/grasp_mobile_progress_circle-1.0.0.min.css" rel="stylesheet" />
    <link href="~/distribution/vendor/malihu-custom-scrollbar-plugin/jquery.mCustomScrollbar.css" rel="stylesheet" />
    <link href="~/distribution/css/style.default.css" rel="stylesheet" />
    <link id="new-stylesheet" rel="stylesheet">
    <link href="~/distribution/css/custom.css" rel="stylesheet" />
    <!-- Tweaks for older IEs-->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script><![endif]-->
</head>
<body class="d-flex flex-column h-100">
 
    <main role="main" class="flex-shrink-0">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="page-header">
                                <h1>
                                    <img alt="Bootstrap Image Preview" src="~/Content/Images/SimpleCureLogo.jpg" style="height:100px;" class="rounded-circle float-left img-thumbnail" />
                                    Simple Cure
                                    <br />1109 N McMillan
                                    <br />Oklahoma City, OK 73127
                                    <br />www.simplecureok.com
                                   
                                </h1>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="page-header">
                                <h1>
                                    Invoice
                                </h1>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <table class="table table-bordered table-sm">
                                        <thead>
                                            <tr>
                                                <th>
                                                    Date Ordered
                                                </th>
                                                <th>
                                                    Date Paid
                                                </th>
                                                <th>
                                                    Invoice #
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>
                                                    @if (Model.OrderInfo.SubmissionDate != null)
                                                    {
                                                        @Convert.ToDateTime(Model.OrderInfo.SubmissionDate).ToShortDateString()
                                                    }
                                                </td>
                                                <td>
                                                    @if (Model.OrderInfo.CompletionDate != null)
                                                    {@Convert.ToDateTime(Model.OrderInfo.CompletionDate).ToShortDateString()}
                                                else
                                                { <span>N/A</span>}

                                                </td>
                                                <td>
                                                    @Model.OrderInfo.ID
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-md-12">
                                    <table class="table table-bordered table-sm">
                                        <thead>
                                            <tr>
                                                <th>
                                                    Bill To
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>
                                                    @Model.CustomerInfo.Company
                                                    <br />@Model.CustomerInfo.Customer
                                                    <br />@Model.CustomerInfo.Street1
                                                    <br />@Model.CustomerInfo.City, @Model.CustomerInfo.State @Model.CustomerInfo.Zip
                                                    <br />@Model.CustomerInfo.OMMALicense
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-md-12">
                                    <table class="table table-bordered table-sm">
                                        <thead>
                                            <tr>
                                                <th>
                                                    Status
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>
                                                    @Model.OrderInfo.OrderStatus
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <table class="table table-bordered text-center">
                                <thead>
                                    <tr>
                                        <th>
                                            Quantity
                                        </th>
                                        <th>
                                            Description
                                        </th>
                                        <th>
                                            Batch ID
                                        </th>
                                        <th>
                                            Price Per Unit
                                        </th>
                                        <th>
                                            Amount
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.ListProducts)
                                    {
                                        <tr>
                                            <td>
                                                @item.Quantity
                                            </td>
                                            <td>
                                                @item.Description
                                            </td>
                                            <td>
                                                @item.BatchID
                                            </td>
                                            <td>
                                                $@Convert.ToDecimal(item.PricePerUnit).ToString("#,##0.00")
                                            </td>
                                            <td>
                                                $@Convert.ToDecimal(item.Total).ToString("#,##0.00")
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            @if (Model.ListDiscounts != null && Model.ListDiscounts.Count > 0)
                            {
                                <div class="row">
                                    <div class="col-md-12">
                                        <table class="table table-bordered text-center">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        Discount Amount
                                                    </th>

                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model.ListDiscounts)
                                                {
                                                    <tr>
                                                        <td>
                                                            $@Convert.ToDecimal(item.DiscountAmount).ToString("#,##0.00")
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            }
                            <br />
                            <p class="float-right"><b>Total</b> $@Convert.ToDecimal((Model.ListProducts.Sum(i => i.Total) - (Model.ListDiscounts.Sum(i => i.DiscountAmount)))).ToString("#,##0.00")  </p>
                        </div>
                    </div>
                   
                </div>
            </div>
        </div>
    </main>
   
    <footer class="footer mt-auto py-3">
        <div class="container">
            <table class="table table-bordered table-sm text-center">
                <thead>
                    <tr>
                        <th>
                            Phone #
                        </th>
                        <th>
                            Fax #
                        </th>
                        <th>
                            E-Mail
                        </th>
                        <th>OMMA#</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            405-601-6867

                        </td>
                        <td>
                            EIN:83-1662069

                        </td>
                        <td>
                            orders@simplecureok.com

                        </td>
                        <td>
                            PAAA-N1JE-51PR  OBN:59691
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </footer>
    <script src="~/distribution/vendor/jquery/jquery.min.js"></script>
    <script src="~/distribution/vendor/popper.js/umd/popper.min.js"></script>
    <script src="~/distribution/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/distribution/js/grasp_mobile_progress_circle-1.0.0.min.js"></script>
    <script src="~/distribution/vendor/jquery.cookie/jquery.cookie.js"></script>
    <script src="~/distribution/vendor/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/distribution/vendor/malihu-custom-scrollbar-plugin/jquery.mCustomScrollbar.concat.min.js"></script>
    <script src="~/distribution/js/front.js"></script>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>
</html>