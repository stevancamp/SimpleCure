@model List<SimpleCure.Models.OrderModels.Orders_ViewModel>
@{
    ViewBag.Title = "Orders";
}

<div class="breadcrumb-holder">
    <div class="container-fluid">
        <ul class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink(" Home", "Index", "Home")
            </li>
            <li class="breadcrumb-item active">Orders</li>
        </ul>
    </div>
</div>
<section class="forms">
    <div class="container-fluid">
        <header>
            <h1 class="h3 display">Order List</h1>
        </header>
        <div class="row">
            <div class="col-md-12">

                <div class="card">
                    <div class="card-header">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <h4>
                                                Search Order List
                                            </h4>
                                        </div>
                                        <div class="col-md-6">
                                            @using (Html.BeginForm("Orders", "Order"))
                                            {
                                                <div class="pull-right">
                                                    <div class="input-group">
                                                        @Html.TextBox("SearchTerm", null, new { @class = "form-control", @placeholder = "Search" })
                                                        <div class="input-group-append">
                                                            <button class="btn btn-primary" type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Order ID #</th>
                                        <th>Company</th>
                                        <th>Customer</th>
                                        <th>Order Status</th>
                                        <th>Order Date</th>
                                        <th>Last Activity Date</th>
                                        <th>View/Edit</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Count > 0)
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.OrderID</td>
                                                <td>@item.CompanyName</td>
                                                <td>@item.CustomerName</td>
                                                <td>@item.OrderStatus</td>
                                                <td>@item.OrderDate</td>
                                                <td>@item.LastActionDate</td>
                                                <td>
                                                    <a href="@Url.Action("ViewOrder", "Order", new { ID = item.OrderID })"><i class="fa fa-search"></i></a> |
                                                    <a href="@Url.Action("EditOrder", "Order", new { ID = item.OrderID })"><i class="fa fa-edit"></i></a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="3" class="text-center">There are no Orders</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

