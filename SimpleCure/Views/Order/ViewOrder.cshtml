    <input type="hidden" value="@Url.Action("EditDiscount", "Admin")" id="UrlEditDiscount" />
    <input type="hidden" value="@Url.Action("Discount", "Admin")" id="UrlDiscount" />*@

@if (Model.ResponseSuccess == false && Model.responseTypes == SimpleCure.Models.ResponseTypes.Failure)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>There was an error!</strong> @Model.ResponseMessage
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@if (Model.responseTypes == SimpleCure.Models.ResponseTypes.Information)
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        @Model.ResponseMessage
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@if (Model.responseTypes == SimpleCure.Models.ResponseTypes.Success && !string.IsNullOrEmpty(Model.ResponseMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @Model.ResponseMessage
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="breadcrumb-holder">
    <div class="container-fluid">
        <ul class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink(" Home", "Index", "Home")
            </li>
            <li class="breadcrumb-item active">View Order</li>
        </ul>
    </div>
</div>
<section class="forms">
    <div class="container-fluid">
        <header>
            <h1 class="h3 display">View Order</h1>
        </header>
        <div class="row">
            <div class="col-md-8">

                <div class="card">
                    <div class="card-header">
                        <h4>Order Information</h4>
                    </div>
                    <div class="card-body">
 
                        <ul>
                            @foreach (var item in Model.OrderActivity)
                            {

                            }
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h4>Status Change Information</h4>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            @if (Model.ListStatus != null && Model.ListStatus.Count > 0)
                            {
                                <select id="Status" name="Status" class="form-control">
                                    <option>--Please Select--</option>
                                    @foreach (var item in Model.ListStatus)
                                    {
                                        <option value="@item.Status">@item.Status</option>
                                    }
                                </select>
                            }
                        </div>
                        <div class="form-group">
                            <textarea id="StatusNotes" class="form-control-lg">

</textarea>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section scripts {
    <script src="~/Scripts/ViewScripts/DiscountViewScript.js"></script>
}
