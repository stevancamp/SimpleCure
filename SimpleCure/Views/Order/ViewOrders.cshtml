@model SimpleCure.Models.OrderModels.ViewOrdersViewModel
@{
    ViewBag.Title = "Orders";
}

@if (Model.ResponseSuccess == false && Model.responseTypes == SimpleCure.Models.ResponseTypes.Failure)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>There was an error!</strong> @Model.ResponseMessage
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@if (Model.responseTypes == SimpleCure.Models.ResponseTypes.Information)
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        @Model.ResponseMessage
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@if (Model.responseTypes == SimpleCure.Models.ResponseTypes.Success && !string.IsNullOrEmpty(Model.ResponseMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @Model.ResponseMessage
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="breadcrumb-holder">
    <div class="container-fluid">
        <ul class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink(" Home", "Index", "Home")
            </li>
            <li class="breadcrumb-item active">Orders</li>
        </ul>
    </div>
</div>

<section>
    <div class="container-fluid">
        <header>
            <h1 class="h3 display">Product Orders</h1>
        </header>
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <h4>
                                                Product Orders
                                            </h4>
                                        </div>
                                        <div class="col-md-6">
                                            @using (Html.BeginForm("ViewOrders", "Order"))
                                            {
                                                <div class="float-right">

                                                    <div class="input-group">

                                                        @Html.TextBoxFor(s => s.SearchTerm, new { required = "required", @class = "form-control" })
                                                        <div class="input-group-append">
                                                            <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i> Search</button>
                                                            @Html.ActionLink("Clear Search",
                      "ViewOrders",   // <-- ActionMethod
                      "Order",  // <-- Controller Name.
                      null, // <-- Route arguments.
                      new { @class = "btn btn-primary" }

                      )
                                                            @*<a class="btn btn-primary" href="~/Views/Order/ViewOrders.cshtml">Clear Search</a>*@
                                                        </div>
                                                    </div>

                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">

                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>#Order</th>
                                        <th>Company Name</th>
                                        <th>Email Address</th>
                                        <th>Order Submission Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.ListOrders != null && Model.ListOrders.Count > 0)
                                    {
                                        foreach (var item in Model.ListOrders)
                                        {
                                            <tr>
                                                <td>@item.ID</td>
                                                <td>@item.CompanyName</td>
                                                <td>@item.EmailAddress</td>
                                                <td>@item.OrderSubmissionDate</td>
                                            </tr>
                                        }

                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="4" class="text-center">No un completed orders for the search term provided.</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

