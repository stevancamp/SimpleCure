@model SimpleCure.Models.OrderModels.ViewOrderDiscounts_ViewModel

<p class="card-text">
    @if (Model.ListOrderDiscounts != null && Model.ListOrderDiscounts.Count > 0)
    {
        <table class="table table-hover table-responsive">
            <thead>
                <tr>
                    <td>Discount</td>
                    <td>Discount Amount</td>
                    <td>Remove</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ListOrderDiscounts)
                {
                    <tr>
                        <td>@item.Type</td>
                        <td>$@Convert.ToDecimal(item.DiscountAmount).ToString("#,##0.00")</td>
                        <td><a href="#" onclick="RemoveOrderDiscount(@item.OrderDiscountID)" class="btn btn-sm btn-outline-danger">Remove</a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <span class="text-danger">There are no Discounts for this Order!</span>
    }
</p>
