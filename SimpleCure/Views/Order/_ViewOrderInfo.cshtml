@model SimpleCure.Models.OrderModels.ViewOrderInfo_ViewModel
<div class="col-md-6">
    <div class="form-group">
        @Html.LabelFor(m => m.CustomerInfo.Customer, new { @class = "form-control-label" })
        @Html.TextBoxFor(m => m.CustomerInfo.Customer, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.CustomerInfo.Company, new { @class = "form-control-label" })
        @Html.TextBoxFor(m => m.CustomerInfo.Company, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.OrderInfo.SubmissionDate, new { @class = "form-control-label" })
        @Html.TextBoxFor(m => m.OrderInfo.SubmissionDate, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.OrderInfo.OrderStatus, new { @class = "form-control-label" })
        @Html.TextBoxFor(m => m.OrderInfo.OrderStatus, new { @class = "form-control" })
    </div>
</div>
<div class="col-md-6">
    <a id="CustomerInfoModalBTN" href="#CustomerInfoModal" role="button" data-toggle="modal"><i class="fa fa-eye"></i> View Customer Info</a> <br />

    <div class="modal fade" id="CustomerInfoModal" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="myModalLabel">
                        Customer Information
                    </h5>
                    <button type="button" class="close" data-dismiss="modal">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group-material">
                        @Html.TextBoxFor(m => m.CustomerInfo.Company, new { @class = "input-material" })
                        <label for="Company" class="label-material">Company</label>
                    </div>

                    <div class="form-group-material">
                        @Html.TextBoxFor(m => m.CustomerInfo.Customer, new { @class = "input-material" })
                        <label for="Customer" class="label-material">Customer Name</label>
                    </div>

                    <div class="form-group-material">
                        @Html.TextBoxFor(m => m.CustomerInfo.MainPhone, new { @class = "input-material" })
                        <label for="MainPhone" class="label-material">Main Phone</label>
                    </div>

                    <div class="form-group-material">
                        @Html.TextBoxFor(m => m.CustomerInfo.Mobile, new { @class = "input-material" })
                        <label for="Mobile" class="label-material">Mobile</label>
                    </div>

                    <div class="form-group-material">
                        @Html.TextBoxFor(m => m.CustomerInfo.MainEmail, new { @class = "input-material" })
                        <label for="MainEmail" class="label-material">Main Email</label>
                    </div>

                    <div class="form-group-material">
                        @Html.TextBoxFor(m => m.CustomerInfo.AltEmail1, new { @class = "input-material" })
                        <label for="AltEmail1" class="label-material">Alt Email</label>
                    </div>

                    <div class="form-group-material">
                        @Html.TextBoxFor(m => m.CustomerInfo.Street1, new { @class = "input-material" })
                        <label for="Street1" class="label-material">Street Address</label>
                    </div>

                    <div class="form-group-material">
                        @Html.TextBoxFor(m => m.CustomerInfo.City, new { @class = "input-material" })
                        <label for="City" class="label-material">City</label>
                    </div>

                    <div class="form-group-material">
                        @Html.TextBoxFor(m => m.CustomerInfo.State, new { @class = "input-material" })
                        <label for="State" class="label-material">State</label>
                    </div>

                    <div class="form-group-material">
                        @Html.TextBoxFor(m => m.CustomerInfo.Zip, new { @class = "input-material" })
                        <label for="Zip" class="label-material">Zip</label>
                    </div>

                    <div class="form-group-material">
                        @Html.TextBoxFor(m => m.CustomerInfo.OMMALicense, new { @class = "input-material" })
                        <label for="OMMALicense" class="label-material">OMMA License#</label>
                    </div>

                    <div class="form-group-material">
                        @Html.TextBoxFor(m => m.CustomerInfo.EIN, new { @class = "input-material" })
                        <label for="EIN" class="label-material">EIN#</label>
                    </div>

                    <div class="form-group-material">
                        @Html.TextBoxFor(m => m.CustomerInfo.FEIN, new { @class = "input-material" })
                        <label for="FEIN" class="label-material">FEIN#</label>
                    </div>

                    <div class="form-group-material">
                        @Html.TextBoxFor(m => m.CustomerInfo.OBN, new { @class = "input-material" })
                        <label for="OBN" class="label-material">OBN#</label>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.CustomerInfo.IndustryType, "Business Type", new { @class = "form-control-label" })
                        <br />
                        <span>@Model.CustomerInfo.IndustryType</span>

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">
                        Close
                    </button>
                </div>
            </div>

        </div>

    </div>

    <a id="OrderActivityModalBTN" href="#OrderActivityModal" role="button" data-toggle="modal"><i class="fa fa-eye"></i> View Order Activity</a>

    <div class="modal fade" id="OrderActivityModal" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="myModalLabel">
                        Order Activity
                    </h5>
                    <button type="button" class="close" data-dismiss="modal">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    @foreach (var item in Model.OrderActivity)
                    {
                        <div class="row">
                            <div class="col-4 date-holder text-right">
                                <div class="icon"><i class="icon-clock"></i></div>
                                <div>@item.Status</div>
                                <div class="date"> <span>@item.ActivityDate</span><span class="text-info">@Convert.ToInt32((DateTime.Now - item.ActivityDate).TotalHours) hours ago</span></div>
                            </div>
                            <div class="col-8 content">
                                <strong>Notes</strong>
                                <p>@item.Notes</p>
                            </div>
                        </div>
                    }
                </div>
                <div class="modal-footer">

                    <button type="button" class="btn btn-secondary" data-dismiss="modal">
                        Close
                    </button>
                </div>
            </div>

        </div>

    </div>
</div>
