<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Simple Cure</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="robots" content="all,follow">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700" rel="stylesheet">
    <!-- Tweaks for older IEs-->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script><![endif]-->
</head>
<body>
    <!-- Side Navbar -->
    <nav class="side-navbar">
        <div class="side-navbar-wrapper">
            <!-- Sidebar Header    -->
            <div class="sidenav-header d-flex align-items-center justify-content-center">
                <!-- User Info-->
                <div class="sidenav-header-inner text-center">
                    <img src="~/Content/Images/UserSilhouette.png" alt="person" class="img-fluid rounded-circle">                   
                </div>
                <!-- Small Brand information, appears on minimized sidebar-->
                <div class="sidenav-header-logo"><a href="@Url.Action("Index", "Home")" class="brand-small text-center"> <strong>S</strong><strong class="text-primary">C</strong></a></div>
            </div>
            <!-- Sidebar Navigation Menus-->
            <div class="main-menu">               
                <h5 class="sidenav-heading">Main</h5>
                <ul id="side-main-menu" class="side-menu list-unstyled">
                    @if (User.IsInRole("Employee") || User.IsInRole("Owner") || User.IsInRole("WebAdmin"))
                    {
                        <li>
                            @Html.ActionLink(" Home",
                            "Index",   // <-- ActionMethod
                            "Home",  // <-- Controller Name.
                            null, // <-- Route arguments.
                            new { @class = "icon-home" }

                            )
                        </li>
                        <li>
                            @Html.ActionLink(" Create Customer",
                            "CreateNewCustomerAccount",
                            "Admin",
                            null,
                            new { @class = "icon-user" }
                            )
                        </li>
                        <li>
                            @Html.ActionLink(" Orders",
                             "Orders",   // <-- ActionMethod
                             "Order",  // <-- Controller Name.
                             null, // <-- Route arguments.
                             new { @class = "icon-screen" }

                             )
                        </li>
                    }
                    @if (User.IsInRole("Customer") || User.IsInRole("Employee") || User.IsInRole("Owner") || User.IsInRole("WebAdmin"))
                    {
                        <li>
                            @Html.ActionLink(" New Order",
                              "CreateOrder",   // <-- ActionMethod
                              "Order",  // <-- Controller Name.
                              null, // <-- Route arguments.
                              new { @class = "icon-form" }

                              )
                        </li>
                    }

                </ul>
            </div>
            @if (User.IsInRole("Owner") || User.IsInRole("WebAdmin"))
            {
                <div class="admin-menu">
                    <h5 class="sidenav-heading">Admin</h5>
                    <ul id="side-admin-menu" class="side-menu list-unstyled">                        
                        <li>
                            @Html.ActionLink(" User Maintenance",
                            "UserMaintenance",
                            "Admin",
                            null,
                            new { @class = "icon-user" }
                            )
                        </li>
                        <li>
                            @Html.ActionLink(" Business Types",
                            "BusinessTypes",
                            "Admin",
                            null,
                            new { @class = "icon-screen" }
                            )
                        </li>
                        <li>
                            @Html.ActionLink(" Order Status",
                            "OrderStatus",
                            "Admin",
                            null,
                            new { @class = "icon-screen" }
                            )
                        </li>
                        <li>
                            @Html.ActionLink(" Product",
                            "Product",
                            "Admin",
                            null,
                            new { @class = "icon-screen" }
                            )
                        </li>
                        <li>
                            @Html.ActionLink(" Product Group",
                            "ProductGroup",
                            "Admin",
                            null,
                            new { @class = "icon-screen" }
                            )
                        </li>
                        <li>
                            @Html.ActionLink(" Discount",
                            "Discount",
                            "Admin",
                            null,
                            new { @class = "icon-screen" }
                            )
                        </li>
                    </ul>
                </div>
                if (User.IsInRole("WebAdmin"))
                {
                    <div class="admin-menu">
                        <h5 class="sidenav-heading">Web Admin</h5>
                        <ul id="side-admin-menu" class="side-menu list-unstyled">
                            <li>
                                @Html.ActionLink(" Logs",
                                "ApplicaitonLogs",
                                "Admin",
                                null,
                                new { @class = "icon-screen" }
                                )
                            </li>                           
                        </ul>
                    </div>
                }
            }
        </div>
    </nav>
    <div class="page">
        <!-- navbar-->
        <header class="header">
            <nav class="navbar">
                <div class="container-fluid">
                    <div class="navbar-holder d-flex align-items-center justify-content-between">
                        <div class="navbar-header">
                            <a id="toggle-btn" href="#" class="menu-btn"><i class="icon-bars"> </i></a><a href="@Url.Action("Index", "Home")" class="navbar-brand">
                                <div class="brand-text d-none d-md-inline-block"><span>Simple </span><strong class="text-primary">Cure</strong></div>
                            </a>
                        </div>
                        <ul class="nav-menu list-unstyled d-flex flex-md-row align-items-md-center">    
                            <!-- Manage Account -->
                            <li class="nav-item">

                                @Html.ActionLink(" Account",
                          "Index",
                          "Manage",
                          null,
                          new { @class = "d-none d-sm-inline-block nav-link fa fa-gear" }
                          )

                            </li>
                            <!-- Log out-->
                            <li class="nav-item">

                                @Html.ActionLink(" Logout",
                          "LogOff",
                          "Account",
                          null,
                          new { @class = "d-none d-sm-inline-block nav-link logout fa fa-sign-out" }
                          )

                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        @RenderBody()
        <footer class="main-footer">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-6">
                        <p>Simple Cure &copy; 
                        <script type="text/JavaScript">
    document.write(new Date().getFullYear());
                        </script>
                        </p>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
